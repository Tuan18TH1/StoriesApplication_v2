    "name": "Tinh Hà Thương Hội",
    "content": "{\\rtf1\\ansi\\ansicpg1252\\uc1\\htmautsp\\deff2{\\fonttbl{\\f0\\fcharset0 Times New Roman;}{\\f2\\fcharset0 Georgia;}{\\f3\\fcharset0 Noto Serif;}}{\\colortbl\\red0\\green0\\blue0;\\red255\\green255\\blue255;}\\loch\\hich\\dbch\\pard\\plain\\ltrpar\\itap0{\\lang1033\\fs30\\f3\\cf0 \\cf0\\qj{\\cf1 \\cf1\\ql{{\\ltrch Qu\\u7843? nhi\\'ean gi\\u7889?ng nh\\u432? nh\\u7919?ng g\\'ec ch\\u432? v\\u7883? s\\u432? th\\'fac t\\u7915?ng n\\'f3i.}\\line \\line {\\ltrch Th\\u7871? gi\\u7899?i b\\'ean ngo\\'e0i tr\\'e0n \\u273?\\u7847?y m\\'e0u s\\u7855?c, \\u273?a ph\\u7847?n \\u273?\\u7873?u l\\'e0 \"ta l\\u7915?a ng\\u432?\\u417?i g\\u7841?t\", nh\\'ecn v\\u7853?y nh\\u432?ng ch\\u432?a ch\\u7855?c \\u273?\\'e3 v\\u7853?y.}\\line \\line {\\ltrch S\\u7921? t\\'ecnh h\\'f4m nay \\u273?\\u7875? Tr\\u7847?n K\\'ednh Huy\\u7873?n \\u273?\\u432?\\u7907?c m\\u7903? mang \\u273?\\u7847?u \\'f3c, t\\'ednh ra h\\u7855?n c\\u361?ng kh\\'f4ng thua thi\\u7879?t c\\'e1i g\\'ec.}\\line \\line {\\ltrch Ngh\\u297? nh\\u432? v\\u7853?y, t\\'e2m t\\'ecnh Tr\\u7847?n K\\'ednh Huy\\u7873?n l\\u7853?p t\\u7913?c b\\'ecnh th\\u432?\\u7901?ng tr\\u7903? l\\u7841?i, mang theo t\\'e2m t\\u432? h\\u432?ng ph\\u7845?n \\u273?\\u7871?n ch\\u7895? kh\\'e1c d\\'f2m ng\\'f3 m\\u7897?t ch\\'fat.}\\line \\line {\\ltrch V\\u7873? ph\\u7847?n th\\'e1i th\\u432?\\u7907?ng nh\\u7883? tr\\u432?\\u7903?ng l\\'e3o Ph\\u7909?ng Mi\\'ean, n\\'e0ng s\\u7899?m \\u273?\\'e3 quen v\\u7899?i s\\u7921? t\\'ecnh \"tr\\'e1 h\\'ecnh\", cho n\\'ean kh\\'f4ng l\\u7845?y l\\'e0m l\\u7841?.}\\line \\line {\\ltrch Th\\u7845?y v\\u7867? m\\u7863?t u\\u7845?t ngh\\u7865?n c\\u7911?a Tr\\u7847?n K\\'ednh Huy\\u7873?n \\u273?\\'e3 bi\\u7871?n th\\'e0nh h\\u432?ng ph\\u7845?n, Ph\\u7909?ng Mi\\'ean kh\\'f4ng mu\\u7889?n \\u273?\\u7843? k\\'edch h\\u7855?n.}\\line \\line {\\ltrch \\u272?i d\\u7885?c theo con ph\\u7889?, Tr\\u7847?n K\\'ednh Huy\\u7873?n d\\'f9ng n\\u7917?a kh\\u7889?i linh th\\u7841?ch mua hai que kem \\u273?\\u7875? th\\u432?\\u7903?ng th\\u7913?c.}\\line \\line {\\ltrch Nghe n\\'f3i \\u273?\\u7891? \\u259?n n\\'e0y b\\u7855?t ngu\\u7891?n t\\u7915? H\\u7841? Gi\\u7899?i, th\\u432?\\u7901?ng b\\'e1n nhi\\u7873?u v\\'e0o m\\'f9a h\\'e8, ch\\u7913? m\\'f9a \\u273?\\'f4ng \\'edt ai \\u259?n l\\u7855?m.}\\line \\line {\\ltrch Do l\\u7847?n \\u273?\\u7847?u g\\u7863?p \\u273?\\u432?\\u7907?c \\u273?\\u7891? \\u259?n m\\u7899?i l\\u7841?, n\\'ean h\\u7855?n m\\u7899?i t\\'f9y ti\\u7879?n th\\u432?\\u7903?ng th\\u7913?c cho bi\\u7871?t, ch\\u7913? kh\\'f4ng qu\\'e1 th\\'edch th\\'fa.}\\line \\line {\\ltrch M\\u7863?c d\\'f9 kem c\\'f3 h\\u417?i ng\\u7885?t ng\\u7885?t, nh\\u432?ng \\u259?n nhi\\u7873?u ch\\u7855?c ch\\u7855?n ng\\'e1n, m\\'e0 linh kh\\'ed b\\'ean trong qu\\'e1 \\'edt, th\\u7853?t s\\u7921? kh\\'f4ng b\\u7893? \\'edch ch\\'fat n\\'e0o.}\\line \\line {\\ltrch Tr\\'ean \\u273?\\u432?\\u7901?ng \\u273?i, Tr\\u7847?n K\\'ednh Huy\\u7873?n ch\\'fa \\'fd t\\u7899?i Tinh H\\'e0 Th\\u432?\\u417?ng H\\u7897?i, h\\u7855?n th\\u7845?y trong c\\u7917?a h\\'e0ng c\\'f3 b\\'e0y b\\'e1n r\\u7845?t nhi\\u7873?u th\\u7913? l\\u7841?, h\\u417?n n\\u7919?a c\\'f2n c\\'f3 Khinh Kh\\'ed C\\u7847?u.}\\line \\line {\\ltrch Ph\\u7909?ng Mi\\'ean th\\u7845?y h\\u7855?n \\u273?\\u7913?ng t\\u7841?i ch\\u7895?, \\'e1nh m\\u7855?t c\\u7913? nh\\'ecn ch\\u7857?m ch\\u7857?m v\\'e0o Tinh H\\'e0 Th\\u432?\\u417?ng H\\u7897?i th\\'ec l\\'ean ti\\u7871?ng:}\\line \\line {\\ltrch \"N\\u7871?u ng\\u432?\\u417?i th\\'edch, c\\'f3 th\\u7875? v\\'e0o trong tham quan m\\u7897?t ch\\'fat.\"}\\line \\line {\\ltrch \"Uy\\u7875?n Nhi, ng\\u432?\\u417?i th\\u7853?t hi\\u7875?u ta.\" Nghe l\\u7901?i n\\'e0y, Tr\\u7847?n K\\'ednh Huy\\u7873?n nh\\u432? m\\u7903? c\\u7901? trong b\\u7909?ng, h\\u7855?n h\\u7899?n h\\u7903? b\\u432?\\u7899?c v\\'e0o \\u273?\\u7841?i s\\u7843?nh.}\\line \\line {\\ltrch Tinh H\\'e0 Th\\u432?\\u417?ng H\\u7897?i n\\'e0y kh\\'f4ng \\u273?\\'f4ng \\u273?\\'fac nh\\u432? nh\\u7919?ng n\\u417?i kh\\'e1c, t\\'e1m ch\\'edn ph\\u7847?n sinh \\'fd kh\\'f4ng \\u273?\\u432?\\u7907?c t\\u7889?t l\\u7855?m.}\\line \\line {\\ltrch Th\\u7901?i \\u273?i\\u7875?m Tr\\u7847?n K\\'ednh Huy\\u7873?n b\\u432?\\u7899?c v\\'e0o \\u273?\\u7841?i s\\u7843?nh, ph\\'eda b\\'ean kia c\\'f3 m\\u7897?t thi\\u7871?u n\\u7919? \\u273?i t\\u7899?i, nh\\'e3 nh\\u7863?n n\\'f3i:}\\line \\line {\\ltrch \"C\\'f4ng t\\u7917?, ch\\'fang ta b\\'e1n r\\u7845?t nhi\\u7873?u \\u273?\\u7891? th\\'fa v\\u7883? \\u7903? H\\u7841? Gi\\u7899?i, ng\\u432?\\u417?i xem th\\u7917? c\\'f3 c\\'e1i n\\'e0o v\\u7915?a m\\u7855?t hay kh\\'f4ng?\"}\\line \\line {\\ltrch \"\\u272?\\u432?\\u7907?c, ng\\u432?\\u417?i c\\u7913? \\u273?\\u7875? ta t\\u7921? nhi\\'ean, kh\\'f4ng c\\u7847?n \\u273?i theo \\u273?\\'e2u.\" Tr\\u7847?n K\\'ednh Huy\\u7873?n g\\u7853?t \\u273?\\u7847?u, s\\u7861?n ti\\u7879?n \\u273?u\\u7893?i kh\\'e9o \\u273?\\u7889?i ph\\u432?\\u417?ng, d\\'f9 sao c\\u361?ng kh\\'f4ng c\\'f3 \\'fd \\u273?\\u7883?nh mua.}\\line \\line {\\ltrch \"V\\'e2ng, xin c\\'f4ng t\\u7917? c\\u7913? t\\u7921? nhi\\'ean!\"}\\line \\line {\\ltrch Thi\\u7871?u n\\u7919? kia th\\u7845?y h\\u7855?n \\u273?u\\u7893?i kh\\'e9o c\\u361?ng kh\\'f4ng c\\'f3 l\\'e0m ra th\\'e1i \\u273?\\u7897? g\\'ec, m\\u7897?t m\\u7863?t t\\u432?\\u417?i c\\u432?\\u7901?i th\\u7889?i lui ra sau.}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n mang theo s\\u7921? t\\'f2 m\\'f2 mu\\u7889?n kh\\'e1m ph\\'e1, h\\u7855?n b\\u432?\\u7899?c \\u273?\\u7871?n b\\'ean c\\u7841?nh chi\\u7871?c xe c\\'f3 b\\u7889?n c\\'e1i b\\'e1nh m\\'e0u \\u273?en, nghi ho\\u7863?c nh\\'ecn l\\'ean b\\u7843?ng th\\'f4ng tin:}\\line \\line {\\ltrch \"S\\u7843?n ph\\u7849?m: Si\\'eau xe BMW.\"}\\line \\line {\\ltrch \"C\\'f4ng n\\u259?ng: Ki\\u7875?u d\\'e1ng m\\u7899?i m\\u7867?, ph\\'f9 h\\u7907?p v\\u7899?i tu ti\\'ean gi\\u7843? l\\u432?\\u7901?i phi h\\'e0nh ho\\u7863?c ch\\'e1n \\u273?i xe ng\\u7921?a.\"}\\line \\line {\\ltrch \"\\u