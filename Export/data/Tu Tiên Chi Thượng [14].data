    "name": "Quần Tiên Hội",
    "content": "{\\rtf1\\ansi\\ansicpg1252\\uc1\\htmautsp\\deff2{\\fonttbl{\\f0\\fcharset0 Times New Roman;}{\\f2\\fcharset0 Georgia;}{\\f3\\fcharset0 Noto Serif;}}{\\colortbl\\red0\\green0\\blue0;\\red255\\green255\\blue255;}\\loch\\hich\\dbch\\pard\\plain\\ltrpar\\itap0{\\lang1033\\fs30\\f3\\cf0 \\cf0\\qj{\\cf1 \\cf1\\ql{{\\ltrch H\\u7855?n b\\u7845?m tay t\\'ednh to\\'e1n m\\u7897?t l\\'fac, sau \\u273?\\'f3 d\\u7913?t kho\\'e1t thay \\u273?\\u7893?i th\\'e0nh 10.000 h\\u7841? ph\\u7849?m linh th\\u7841?ch.}\\line \\line {\\ltrch \"T\\'f4ng ch\\u7911? mu\\u7889?n l\\u7845?y 10.000 h\\u7841? ph\\u7849?m linh th\\u7841?ch?\"}\\line \\line {\\ltrch Nh\\'ecn b\\u7843?ng th\\'f4ng b\\'e1o, Tr\\u7847?n K\\'ednh Huy\\u7873?n ch\\u7885?n v\\'e0o ch\\u7919? \"ch\\u7845?p nh\\u7853?n\", b\\u7843?ng th\\'f4ng b\\'e1o l\\u7853?p t\\u7913?c thay \\u273?\\u7893?i:}\\line \\line {\\ltrch \"T\\'f4ng ch\\u7911? thu \\u273?\\u432?\\u7907?c 10.000 h\\u7841? ph\\u7849?m linh th\\u7841?ch, \\u273?\\'e3 chuy\\u7875?n linh th\\u7841?ch v\\'e0o kh\\'f4ng gian tr\\u7919? v\\u7853?t.\"}\\line \\line {\\ltrch Thu \\u273?\\u432?\\u7907?c linh th\\u7841?ch, t\\'e2m tr\\u7841?ng Tr\\u7847?n K\\'ednh Huy\\u7873?n v\\'f4 c\\'f9ng vui v\\u7867?, h\\u7855?n v\\u7885?i v\\'e0ng l\\'ean ti\\u7871?ng:}\\line \\line {\\ltrch \"Ti\\u7875?u Ho\\'e0ng, l\\'e0m sao \\u273?\\u7875? n\\u7841?p linh th\\u7841?ch v\\u7853?y?\"}\\line \\line {\\ltrch \"Chuy\\u7879?n n\\'e0y r\\u7845?t \\u273?\\u417?n gi\\u7843?n, k\\'fd ch\\u7911? ch\\u7881? c\\u7847?n ch\\u7885?n v\\'e0o h\\'ecnh \\u7843?nh linh th\\u7841?ch \\u7903? g\\u7889?c tr\\'e1i m\\'e0n h\\'ecnh l\\'e0 \\u273?\\u432?\\u7907?c.\"}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n l\\'e0m theo, h\\u7855?n ch\\u7885?n v\\'e0o h\\'ecnh \\u7843?nh linh th\\u7841?ch \\u7903? g\\'f3c tr\\'e1i, \\'e2m thanh linh th\\u7889?ng l\\u7853?p t\\u7913?c vang l\\'ean:}\\line \\line {\\ltrch \"K\\'fd ch\\u7911? mu\\u7889?n n\\u7841?p linh th\\u7841?ch hay r\\'fat linh th\\u7841?ch?\"}\\line \\line {\\ltrch \"Ta mu\\u7889?n n\\u7841?p linh th\\u7841?ch, ng\\u432?\\u417?i nhanh nhanh m\\u7897?t ch\\'fat, ta mu\\u7889?n mua m\\u7897?t \\'edt \\u273?\\u7891? \\u259?n.\"}\\line \\line {\\ltrch Tuy mi\\u7879?ng \\u273?ang n\\'f3i, nh\\u432?ng Tr\\u7847?n K\\'ednh Huy\\u7873?n kh\\'f4ng qu\\'ean l\\u7845?y linh th\\u7841?ch trong t\\'fai tr\\u7919? v\\u7853?t \\u273?\\u7863?t \\u7903? tr\\u432?\\u7899?c m\\u7863?t.}\\line \\line {\\ltrch \"K\\'fd ch\\u7911? l\\u7921?a ch\\u7885?n n\\u7841?p linh th\\u7841?ch, linh th\\u7889?ng \\u273?ang qu\\'e9t linh th\\u7841?ch. . . \\u273?\\'e3 t\\'ecm th\\u7845?y ngu\\u7891?n n\\u259?ng l\\u432?\\u7907?ng.\"}\\line \\line {\\ltrch \\'c2m thanh v\\u7915?a d\\u7913?t, \\u273?\\u7889?ng linh th\\u7841?ch tr\\u432?\\u7899?c m\\u7863?t Tr\\u7847?n K\\'ednh Huy\\u7873?n \\u273?\\u7897?t nhi\\'ean bi\\u7871?n m\\u7845?t.}\\line \\line {\\ltrch \"K\\'fd ch\\u7911? n\\u7841?p linh th\\u7841?ch th\\'e0nh c\\'f4ng, hi\\u7879?n t\\u7841?i \\u273?ang c\\'f3 10.000 linh th\\u7841?ch.\"}\\line \\line {\\ltrch Nh\\'ecn con s\\u7889? m\\u432?\\u7901?i ng\\'e0n \\u7903? g\\'f3c tr\\'e1i m\\'e0n h\\'ecnh, Tr\\u7847?n K\\'ednh Huy\\u7873?n xoa xoa b\\'e0n tay, h\\u7855?n m\\u7903? ch\\u7913?c n\\u259?ng mua s\\u7855?m, sau \\u273?\\'f3 ch\\u7885?n c\\u7917?a h\\'e0ng Thanh Th\\'fay.}\\line \\line {\\ltrch H\\u7855?n c\\u259?n b\\u7843?n ch\\u7859?ng c\\u7847?n suy ngh\\u297?, tr\\u7921?c ti\\u7871?p ch\\u7885?n v\\'e0o h\\'ecnh \\u7843?nh t\\'f4 m\\'ec c\\'f3 hai con t\\'f4m, n\\u432?\\u7899?c mi\\u7871?ng s\\u7855?p r\\u417?i ra ngo\\'e0i.}\\line \\line {\\ltrch \"T\\'ean s\\u7843?n ph\\u7849?m: M\\'ec Thanh Th\\'fay.\"}\\line \\line {\\ltrch \"Gi\\u7899?i thi\\u7879?u: S\\u7907?i m\\'ec \\u273?\\u432?\\u7907?c l\\'e0m t\\u7915? linh m\\u7877?, d\\'f9ng linh tuy\\u7873?n \\u273?\\u7875? l\\'e0m n\\u432?\\u7899?c d\\'f9ng, \\u259?n m\\u7897?t t\\'f4 gi\\'fap tu s\\u297? Ng\\u432?ng Kh\\'ed K\\u7923? b\\u7899?t n\\u259?m ng\\'e0y kh\\u7893? tu.\"}\\line \\line {\\ltrch \"Gi\\'e1 b\\'e1n: 55 linh th\\u7841?ch.\"}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n kh\\'f4ng ch\\u7901? \\u273?\\u432?\\u7907?c n\\u7919?a, h\\u7855?n l\\u7853?p t\\u7913?c mua m\\u7897?t t\\'f4 \\u273?\\u7875? th\\u432?\\u7903?ng th\\u7913?c, h\\u7855?n qu\\'e1 \\u273?\\'f3i r\\u7891?i.}\\line \\line {\\ltrch \"K\\'fd ch\\u7911? v\\u7915?a mua m\\u7897?t t\\'f4 m\\'ec th\\u432?\\u7907?ng h\\u7841?ng \\u7903? c\\u7917?a h\\'e0ng Thanh Th\\'fay v\\u7899?i gi\\'e1 55 linh th\\u7841?ch. Thanh to\\'e1n th\\'e0nh c\\'f4ng, kh\\'f4ng gian giao h\\'e0ng \\u273?ang m\\u7903? ra. . .\"}\\line \\line {\\ltrch C\\'f2n ch\\u432?a \\u273?\\u7875? h\\u7855?n ph\\'e0n n\\'e0n, kh\\'f4ng gian tr\\u7919? v\\u7853?t c\\u7911?a Ti\\u7875?u Ho\\'e0ng \\u273?\\'e3 xu\\u7845?t hi\\u7879?n h\\'ecnh \\u7843?nh m\\u7897?t t\\'f4 m\\'ec.}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n nhanh tay \\u273?i\\u7875?m v\\'e0o t\\'f4 m\\'ec, kh\\'f4ng gian xung quanh h\\u417?i ba \\u273?\\u7897?ng m\\u7897?t ch\\'fat, sau \\u273?\\'f3 t\\'f4 m\\'ec \\u273?\\'e3 xu\\u7845?t hi\\u7879?n tr\\u432?\\u7899?c m\\u7863?t h\\u7855?n.}\\line \\line {\\ltrch M\\'f9i th\\u417?m n\\u7891?ng n\\u7863?c truy\\u7873?n ra, nh\\'ecn nh\\u7919?ng s\\u7907?i m\\'ec m\\'e0u v\\'e0ng t\\u432?\\u417?i, Tr\\u7847?n K\\'ednh Huy\\u7873?n kh\\'f4ng nh\\u7883?n \\u273?\\u432?\\u7907?c n\\u7919?a, tr\\u7921?c ti\\u7871?p th\\u432?\\u7903?ng th\\u7913?c.}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n kh\\'f4ng kh\\u7887?i c\\u7843?m kh\\'e1i, th\\u7901?i \\u273?i\\u7875?m h\\u7855?n v\\u7915?a \\u259?n no, k\\u7871?t gi\\u7899?i \\u273?\\u7897?t nhi\\'ean bi\\u7871?n m\\u7845?t, sau \\u273?\\'f3 xu\\u7845?t hi\\u7879?n th\\'e2n \\u7843?nh c\\u7911?a Ph\\u7909?ng Mi\\'ean.}\\line \\line {\\ltrch Th\\u7845?y h\\u7855?n ng\\u7891?i t\\u7921?a l\\u432?ng v\\'e0o gi\\u432?\\u7901?ng xoa b\\u7909?ng, Ph\\u7909?ng Mi\\'ean th\\u7903? d\\'e0i h\\u7887?i: \"Tr\\u7901?i c\\u361?ng t\\u7889?i r\\u7891?i, hi\\u7879?n t\\u7841?i c\\'f2n mu\\u7889?n \\u273?i \\u273?\\'e2u n\\u7919?a kh\\'f4ng?\"}\\line \\line {\\ltrch \"H\\'f4m nay \\u273?\\u7911? r\\u7891?i, ta mu\\u7889?n ngh\\u7881? ng\\u417?i m\\u7897?t ch\\'fat!\"}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n l\\u7855?c \\u273?\\u7847?u nh\\u432? c\\'e1i tr\\u7889?ng, \\u259?n no h\\u7855?n l\\u7841?i t\\'ecm hi\\u7875?u v\\u7873? Ti\\u7875?u Ho\\'e0ng.}\\line \\line {\\ltrch \"Nh\\u432? Nguy\\u7879?t Ti\\'ean T\\u7917? v\\u7915?a \\u273?\\u7891?ng \\'fd cho k\\'fd ch\\u7911? gia nh\\u7853?p Qu\\u7847?n Ti\\'ean H\\u7897?i!\"}\\line \\line {\\ltrch C\\'f9ng th\\u7901?i \\u273?i\\u7875?m n\\'e0y, tr\\'ean m\\'e0n h\\'ecnh chat c\\u361?ng xu\\u7845?t hi\\u7879?n m\\u7897?t d\\'f2ng th\\'f4ng b\\'e1o c\\'f3 th\\'e0nh vi\\'ean gia nh\\u7853?p.}\\line \\line {\\ltrch \"R\\u7889?t cu\\u7897?c c\\u361?ng \\u273?\\u7907?i \\u273?\\u432?\\u7907?c!\"}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n nhe r\\u259?ng c\\u432?\\u7901?i, h\\u7855?n m\\u7903? ch\\u7913?c n\\u259?ng group chat l\\'ean, ngay m\\'e0n h\\'ecnh ch\\'ednh \\u273?\\'e3 xu\\u7845?t hi\\u7879?n nh\\'f3m Qu\\u7847?n Ti\\'ean H\\u7897?i.}\\line \\line {\\ltrch Th\\u7901?i \\u273?i\\u7875?m c\\'f3 th\\'f4ng b\\'e1o th\\'e0nh vi\\'ean m\\u7899?i, \\u273?\\'e1m th\\'e0nh vi\\'ean c\\u361? l\\u7841?i tr\\u7891?i l\\'ean, b\\u7855?t \\u273?\\u7847?u t\\'e1n g\\u7851?u.}\\line \\line {\\ltrch L\\u259?ng Ph\\'e0m Ti\\u7871?u c\\'f3 ch\\'fat t\\'f2 m\\'f2, tr\\u7921?c ti\\u7871?p g\\u7917?i l\\'ean m\\u7897?t \\u273?o\\u7841?n tin nh\\u7855?n:}\\line \\line {\\ltrch \"Nh\\u432? Nguy\\u7879?t Ti\\'ean T\\u7917? v\\u7915?a th\\'eam \\u273?\\u7841?o h\\u7919?u m\\u7899?i \\u273?\\u7845?y \\'e0? H\\u417?n m\\u7897?t n\\u259?m r\\u7891?i m\\u7899?i c\\'f3 ng\\u432?\\u7901?i gia nh\\u7853?p th\\'ec ph\\u7843?i?\"}\\line \\line {\\ltrch Tin nh\\u7855?n v\\u7915?a xu\\u7845?t hi\\u7879?n, l\\u7853?p t\\u7913?c c\\'f3 m\\u7897?t ng\\u432?\\u7901?i t\\'ean g\\u7885?i M\\u7841?c Tu\\u7845?n Ki\\u7879?t nhanh ch\\'e2n ph\\u7843?n h\\u7891?i:}\\line \\line {\\ltrch \"C\\'f3 \\u273?\\u7841?o h\\u7919?u m\\u7899?i \\'e0? \\u272?\\u7841?o h\\u7919?u tu h\\'e0nh \\u7903? \\u273?\\'e2u? L\\'e0 t\\'e1n tu hay t\\'f4ng m\\'f4n gia t\\u7897?c? Tu vi n\\'f4ng s\\'e2u th\\u7871? n\\'e0o?\"}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n k\\'e9o khung chat ra xem, r\\u7889?t cu\\u7897?c \\u273?\\'e3 hi\\u7875?u th\\u7871? n\\'e0o l\\'e0 group chat, nguy\\'ean lai l\\'e0 g\\u7917?i m\\u7897?t \\u273?o\\u7841?n tin t\\u7913?c cho nhi\\u7873?u ng\\u432?\\u7901?i.}\\line \\line {\\ltrch Theo h\\u7855?n bi\\u7871?t, c\\'e1i n\\'e0y \\u273?\\u432?\\u7907?c g\\u7885?i l\\'e0 tin nh\\u7855?n, l\\'e0 t\\u7915? ng\\u7919? m\\u7899?i ph\\'e1t tri\\u7875?n m\\u7845?y ng\\'e0n n\\u259?m nay, ch\\u7881? l\\'e0 h\\u7855?n kh\\'f4ng bi\\u7871?t m\\'e0 th\\'f4i.}\\line \\line {\\ltrch \"Sao \\u273?\\u7841?o h\\u7919?u m\\u7899?i gia nh\\u7853?p kh\\'f4ng n\\'f3i g\\'ec th\\u7871? n\\'e0y?\"}\\line \\line {\\ltrch Tri\\u7879?u S\\u7903? V\\'e2n g\\u7917?i l\\'ean m\\u7897?t \\u273?o\\u7841?n tin nh\\u7855?n, k\\'e8m theo icon nghi ho\\u7863?c, sau \\u273?\\'f3 nh\\u7919?ng ng\\u432?\\u7901?i kh\\'e1c c\\u361?ng g\\u7917?i m\\u7897?t lo\\u7841?t d\\u7845?u ba ch\\u7845?m.}\\line \\line {\\ltrch \"Ti\\u7875?u Ho\\'e0ng g\\u7907?i \\'fd, k\\'fd ch\\u7911? nh\\u7845?n v\\'e0o \\'f4 h\\'ecnh ch\\u7919? nh\\u7853?t b\\'ean d\\u432?\\u7899?i, l\\u7853?p t\\u7913?c c\\'f3 th\\u7875? so\\u7841?n tin nh\\u7855?n. C\\'f2n c\\'e1i \\'f4 h\\'ecnh m\\u7863?t c\\u432?\\u7901?i b\\'ean g\\'f3c tr\\'e1i g\\u7885?i l\\'e0 icon tr\\u7841?ng th\\'e1i, m\\u7845?y c\\'e1i n\\'e0y \\u273?\\u7873?u h\\u7885?c h\\u7887?i t\\u7915? Ph\\'e0m gi\\u7899?i. Khi n\\'e0o so\\u7841?n tin nh\\u7855?n xong th\\'ec nh\\u7845?n v\\'e0o h\\'ecnh m\\u361?i t\\'ean b\\'ean ph\\u7843?i l\\'e0 tin nh\\u7855?n s\\u7869? hi\\u7875?n th\\u7883? tr\\'ean group.}\\line \\line {\\ltrch \"H\\u7885?c t\\u7915? H\\u7841? Gi\\u7899?i? Tu ti\\'ean gi\\u7843? ch\\'fang ta th\\u7853?t c\\'f3 l\\'f2ng h\\u7885?c h\\u7887?i!\"}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n h\\u417?i ng\\u7841?c nhi\\'ean, nh\\u432?ng h\\u7855?n kh\\'f4ng v\\u7897?i tr\\u7843? l\\u7901?i tin nh\\u7855?n, tr\\u432?\\u7899?c m\\u7855?t xem th\\u7917? m\\u7897?t th\\u7901?i gian r\\u7891?i tr\\u7891?i l\\'ean c\\u361?ng kh\\'f4ng mu\\u7897?n.}\\line \\line {\\ltrch L\\'fac n\\'e0y, Ho\\'e0ng Thi\\'ean Phong \\u7903? \\u273?\\'e2u \\u273?\\'f3 l\\u7841?i tr\\u7891?i l\\'ean, nh\\u7855?n v\\u7899?i m\\u7885?i ng\\u432?\\u7901?i m\\u7897?t c\\'e2u:}\\line \\line {\\ltrch \"Ta m\\u7899?i xem th\\'f4ng tin c\\u7911?a v\\u7883? \\u273?\\u7841?o h\\u7919?u n\\'e0y, \\u273?\\u7841?o h\\u7919?u m\\u7899?i gia nh\\u7853?p t\\'ean Huy\\u7873?n Ti\\'ean. Ch\\u432? v\\u7883? \\u273?\\'e3 nghe qua c\\'e1i t\\'ean n\\'e0y l\\u7847?n n\\'e0o ch\\u432?a? Nghe c\\u7913? nh\\u432? \\u273?\\u7871?n t\\u7915? m\\u7897?t t\\'f4ng m\\'f4n \\u273?\\u7841?i ph\\'e1i n\\'e0o \\u273?\\'f3 \\u7845?y nh\\u7881?? C\\'f3 khi n\\'e0o l\\'e0 \\u273?\\u7879? t\\u7917? n\\u7897?i m\\'f4n kh\\'f4ng?\"}\\line \\line {\\ltrch \"C\\'e1i t\\'ean Huy\\u7873?n Ti\\'ean nghe l\\u7841? th\\u7853?t, B\\'e1ch Th\\u7843?o M\\'f4n ch\\'fang ta h\\'ecnh nh\\u432? kh\\'f4ng c\\'f3 \\u273?\\u7879? t\\u7917? n\\u7897?i m\\'f4n n\\'e0o t\\'ean nh\\u432? v\\u7853?y c\\u7843?.\"}\\line \\line {\\ltrch Ng\\'f4 Tri\\u7879?u Ph\\'e0m g\\u7917?i m\\u7897?t c\\'e1i icon x\\'f2e tay nh\\u432? kh\\'f4ng bi\\u7871?t, sau \\u273?\\'f3 m\\u7897?t \\'edt \\u273?\\u7879? t\\u7917? \\u7903? B\\'e1ch Th\\u7843?o M\\'f4n c\\u361?ng g\\u7917?i icon g\\u7853?t \\u273?\\u7847?u x\\'e1c nh\\u7853?n.}\\line \\line {\\ltrch Tri\\u7879?u S\\u7903? V\\'e2n \\u273?\\u7897?t nhi\\'ean c\\u432?\\u7901?i gian, n\\'f3i: \"C\\'f3 l\\u7869? v\\u7883? \\u273?\\u7841?o h\\u7919?u n\\'e0y ch\\u432?a bi\\u7871?t c\\'e1ch s\\u7917? d\\u7909?ng linh th\\u7889?ng th\\u7871? h\\u7879? m\\u7899?i c\\u361?ng n\\'ean?!\"}\\line \\line {\\ltrch H\\u7855?n v\\u7915?a m\\u7899?i n\\'f3i xong th\\'ec m\\u7885?i ng\\u432?\\u7901?i c\\u7843?m th\\u7845?y c\\u361?ng c\\'f3 l\\'fd l\\u7855?m.}\\line \\line {\\ltrch \\u272?\\'fang v\\u7853?y, hai n\\u259?m tr\\u432?\\u7899?c c\\u361?ng c\\'f3 m\\u7897?t v\\u7883? \\u273?\\u7841?o h\\u7919?u t\\u7915?ng gia nh\\u7853?p group chat, b\\u7845?t qu\\'e1 m\\'e3i m\\'ea b\\u7871? quan tu luy\\u7879?n n\\'ean v\\u7845?t v\\u7843? l\\u7855?m m\\u7899?i s\\u7917? d\\u7909?ng \\u273?\\u432?\\u7907?c ch\\u7913?c n\\u259?ng n\\'e0y.}\\line \\line {\\ltrch Khi \\u273?\\'f3, m\\u7845?y ng\\'e0y \\u273?\\u7847?u ng\\u432?\\u7901?i kia c\\'f2n kh\\'f4ng c\\'e1ch n\\'e0o g\\u7917?i tin nh\\u7855?n l\\'ean nh\\'f3m, l\\'e0m m\\u7885?i ng\\u432?\\u7901?i t\\u432?\\u7903?ng ng\\u432?\\u7901?i kia kh\\'f4ng th\\'edch.}\\line \\line {\\ltrch R\\u7889?t cu\\u7897?c v\\u7873? sau m\\u7899?i bi\\u7871?t, kh\\'f4ng ph\\u7843?i \\u273?\\u7889?i ph\\u432?\\u417?ng kh\\'f4ng th\\'edch, m\\'e0 l\\'e0 kh\\'f4ng bi\\u7871?t c\\'e1ch s\\u7917? d\\u7909?ng.}\\line \\line {\\ltrch \\u272?\\'fang l\\'fac n\\'e0y, M\\u7841?c Tu\\u7845?n Ki\\u7879?t l\\u7841?i c\\u432?\\u7901?i h\\'ec h\\'ec, n\\'f3i:}\\line \\line {\\ltrch \"\\u272?\\'fang r\\u7891?i, ta nghe m\\u7885?i ng\\u432?\\u7901?i n\\'f3i 3 ng\\'e0y tr\\u432?\\u7899?c c\\'f3 ng\\u432?\\u7901?i t\\u7915? T\\u7913? Thi\\'ean Th\\u432?\\u7907?ng V\\u7921?c ch\\u7841?y t\\u7899?i Thi\\'ean Uy\\'ean Th\\'e0nh l\\'e0m lo\\u7841?n \\u273?\\'fang kh\\'f4ng?\"}\\line \\line {\\ltrch \"Tin t\\u7913?c lan truy\\u7873?n nhanh th\\u7853?t, t\\'ean kia l\\'e0 Di\\u7879?p T\\'f4n \\u272?\\u7871?, nghe n\\'f3i \\u273?\\u7841?t t\\u7899?i tu vi \\u272?\\u7871? T\\'f4n C\\u7843?nh g\\'ec \\u273?\\'f3 c\\u361?ng kh\\'f4ng r\\'f5 l\\u7855?m.\"}\\line \\line {\\ltrch Nh\\u432? Nguy\\u7879?t Ti\\'ean T\\u7917? th\\'e0nh th\\u7853?t tr\\u7843? l\\u7901?i, nh\\u432?ng g\\u7917?i k\\'e8m c\\'e1i icon kinh th\\u432?\\u7901?ng, kh\\'f4ng cho r\\u7857?ng \\u273?\\'e1m ng\\u432?\\u7901?i \\u273?\\'f3 l\\'e0 \\u273?\\u7841?i n\\u259?ng.}\\line \\line {\\ltrch C\\'f3 ng\\u432?\\u7901?i t\\'ean T\\u7847?n V\\'e2n nh\\u7883?n kh\\'f4ng \\u273?\\u432?\\u7907?c t\\'f2 m\\'f2, tr\\u7891?i l\\'ean h\\u7887?i: \"V\\u7853?y h\\u7855?n \\u273?\\u7871?n Thi\\'ean Uy\\'ean Th\\'e0nh \\u273?\\u7875? l\\'e0m g\\'ec v\\u7853?y?\"}\\line \\line {\\ltrch \"\\u7914?m, h\\'ecnh nh\\u432? l\\'e0 \\u273?\\u7871?n ch\\u7913?ng minh ng\\u432?\\u7901?i Th\\u432?\\u7907?ng Gi\\u7899?i m\\u7841?nh nh\\u7845?t th\\u7871? gian. T\\'ean \\u273?\\'f3 lu\\'f4n mi\\u7879?ng th\\'e9t Nh\\u7845?t Quy\\u7873?n Ph\\'e1 V\\u7841?n Ph\\'e1p, nghe th\\u7853?t s\\u7921? c\\'f3 kh\\'ed l\\u7921?c.\"}\\line \\line {\\ltrch \"\\u7846?y. . . nh\\'ecn t\\'ean Di\\u7879?p T\\'f4n \\u272?\\u7871? kia th\\u7853?t \\u273?\\'e1ng th\\u432?\\u417?ng!\"}\\line \\line {\\ltrch M\\u7897?t s\\u7889? \\u273?\\u7841?o h\\u7919?u kh\\'e1c \\u273?\\u7891?ng lo\\u7841?t tr\\u7891?i l\\'ean, th\\u7843? v\\'f4 s\\u7889? icon c\\u432?\\u7901?i kh\\u7893?, hi\\u7875?n nhi\\'ean b\\u7885?n h\\u7885? \\u273?\\'e3 nghe qua chuy\\u7879?n n\\'e0y.}\\line \\line {\\ltrch Y\\u7871?n T\\u7883?ch T\\u7883?ch g\\u7917?i icon khinh th\\u432?\\u7901?ng, c\\u432?\\u7901?i l\\u7841?nh n\\'f3i:}\\line \\line {\\ltrch \"Ta nghe s\\u432? th\\'fac n\\'f3i b\\'ean \\u273?\\'f3 c\\'f3 nhi\\u7873?u \\u273?\\u7841?i n\\u259?ng ngh\\u7883?ch t\\u7853?p l\\u7855?m, ch\\u7881? c\\u7847?n \\u273?i m\\u7845?y tr\\u259?m d\\u7863?m li\\u7873?n g\\u7863?p \\u273?\\u432?\\u7907?c m\\u7897?t ng\\u432?\\u7901?i.\"}\\line \\line {\\ltrch \"H\\u7843?! C\\'f2n c\\'f3 chuy\\u7879?n nh\\u432? th\\u7871? n\\'e0y? T\\u7883?ch T\\u7883?ch Ti\\'ean T\\u7917? c\\'f3 th\\u7875? n\\'f3i r\\'f5 h\\u417?n \\u273?\\u432?\\u7907?c kh\\'f4ng, \\u272?\\u7891? Phong ta th\\u7853?t s\\u7921? t\\'f2 m\\'f2 \\u273?\\'f3.\"}\\line \\line {\\ltrch \\u272?\\u7891? Phong nh\\u7883?n kh\\'f4ng \\u273?\\u432?\\u7907?c nghi ho\\u7863?c, g\\u7845?p g\\'e1p nh\\u7855?n tin cho Y\\u7871?n T\\u7883?ch T\\u7883?ch, mong n\\'e0ng nhanh ch\\'f3ng k\\u7875? cho m\\'ecnh nghe.}\\line \\line {\\ltrch \"Chuy\\u7879?n l\\'e0 th\\u7871? n\\'e0y, b\\u7889?n th\\'e1ng tr\\u432?\\u7899?c s\\u432? th\\'fac c\\u7911?a ta c\\'f3 chuy\\u7879?n c\\u7847?n ph\\u7843?i qua T\\u7913? Thi\\'ean Th\\u432?\\u7907?ng V\\u7921?c m\\u7897?t chuy\\u7871?n, n\\'ean ti\\u7879?n \\u273?\\u432?\\u7901?ng gh\\'e9 th\\u259?m L\\u7909?c gia m\\u7897?t ch\\'fat.\"}\\line \\line {\\ltrch \"Ch\\u7881? l\\'e0 c\\'f2n ch\\u432?a u\\u7889?ng \\u273?\\u432?\\u7907?c ng\\u7909?m tr\\'e0 n\\'e0o \\u273?\\'e3 b\\u7883? m\\u7897?t t\\'ean o\\u7855?t con ch\\u7915?ng 18 tu\\u7893?i x\\'f4ng v\\'e0o \\u273?\\u7853?p ph\\'e1, n\\'f3i c\\'e1i g\\'ec 'tinh th\\u7847?n nam nhi kh\\'f4ng th\\u7875? b\\u7883? ch\\'e0 \\u273?\\u7841?p, nam t\\u7917? h\\'e1n c\\'f3 th\\u7875? ch\\u7871?t, kh\\'f4ng th\\u7875? nh\\u7909?c'.\"}\\line \\line {\\ltrch \"Th\\u7845?y chuy\\u7879?n k\\u7923? l\\u7841? ph\\'e1t sinh, s\\u432? th\\'fac ta h\\u7887?i th\\u259?m m\\u7897?t ch\\'fat m\\u7899?i bi\\u7871?t c\\u259?n nguy\\'ean b\\'ean trong.\"}\\line \\line {\\ltrch \"Nguy\\'ean lai l\\'e0 ti\\u7875?u t\\u7917? t\\'ean Di\\u7879?p Ph\\'e0m kia c\\'f3 h\\'f4n \\u432?\\u7899?c c\\'f9ng L\\u7909?c ti\\u7875?u th\\u432?, m\\'e0 \\u273?\\'e2y l\\'e0 h\\'f4n \\u432?\\u7899?c l\\u7907?i \\'edch c\\u7911?a hai gia t\\u7897?c, h\\u417?n n\\u7919?a hai ng\\u432?\\u7901?i \\u273?\\'f3 c\\u361?ng ch\\u432?a t\\u7915?ng g\\u7863?p nhau l\\u7847?n n\\'e0o.\"}\\line \\line \\li0\\ri0\\sa0\\sb0\\fi0\\ql\\par}\r\n}\r\n}\r\n}"
