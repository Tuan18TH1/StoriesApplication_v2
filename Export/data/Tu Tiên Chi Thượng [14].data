h - C\\'f4ng n\\u259?ng: H\\u7911?y thi\\'ean di\\u7879?t \\u273?\\u7883?a, trong ph\\u7841?m vi 38 d\\u7863?m \\u273?\\u7873?u tr\\u7903? th\\'e0nh b\\'ecnh \\u273?\\u7883?a (1 d\\u7863?m = 444m, t\\u432?\\u417?ng \\u273?\\u432?\\u417?ng 16.872m).}\\line \\line {\\ltrch \"S\\u7913?c m\\u7841?nh: T\\u432?\\u417?ng \\u273?\\u432?\\u417?ng m\\u7897?t k\\'edch to\\'e0n l\\u7921?c c\\u7911?a tu s\\u297? Kim \\u272?an h\\u7853?u k\\u7923?.\"}\\line \\line {\\ltrch \"Gi\\'e1 b\\'e1n: 189.525 linh th\\u7841?ch.\"}\\line \\line {\\ltrch Nh\\'ecn t\\u7899?i \\u273?\\'e2y, Tr\\u7847?n K\\'ednh Huy\\u7873?n kh\\'f4ng kh\\u7887?i h\\'edt s\\'e2u m\\u7897?t h\\u417?i, kh\\'f4ng ngh\\u297? Ph\\'e0m gi\\u7899?i l\\u7841?i ch\\u7871? t\\u7841?o \\u273?\\u432?\\u7907?c v\\u361? kh\\'ed m\\u7841?nh nh\\u432? th\\u7871?.}\\line \\line {\\ltrch Ph\\u7843?i bi\\u7871?t Kim \\u272?an K\\u7923? \\u7903? Ph\\'e0m gi\\u7899?i kh\\'f4ng ph\\u7843?i c\\u7843?nh gi\\u7899?i th\\u7845?p, c\\u417? h\\u7891? \\u273?\\u432?\\u7907?c xem nh\\u432? b\\'e1 ch\\u7911? m\\u7897?t ph\\u432?\\u417?ng, \\u273?\\'e2y kh\\'f4ng ph\\u7843?i chuy\\u7879?n \\u273?\\'f9a.}\\line \\line {\\ltrch Nghe n\\'f3i \\u273?\\'e2y l\\'e0 v\\u361? kh\\'ed c\\u7911?a ph\\'e0m nh\\'e2n, kh\\'f4ng ngh\\u297? b\\u7885?n h\\u7885? l\\u7841?i t\\u7841?o ra \\u273?\\u7891? ch\\u417?i c\\'f3 th\\u7875? chi\\u7871?n \\u273?\\u7845?u c\\'f9ng tu s\\u297? cao gai.}\\line \\line {\\ltrch C\\'e1i n\\'e0y th\\u7853?t s\\u7921? ngo\\'e0i \\'fd mu\\u7889?n, m\\'e0 Ph\\u7909?ng Mi\\'ean c\\u361?ng c\\'f3 ph\\u7847?n b\\u7845?t ng\\u7901?, tuy uy l\\u7921?c \\u273?\\u7889?i v\\u7899?i v\\u361? kh\\'ed h\\u7911?y di\\u7879?t c\\u7911?a tu ti\\'ean gi\\u7899?i kh\\'f4ng l\\'e0 g\\'ec.}\\line \\line {\\ltrch Nh\\u432?ng nh\\'e2n gi\\u7899?i ch\\u7871? t\\u7841?o \\u273?\\u432?\\u7907?c nh\\u432? v\\u7853?y, c\\u361?ng xem nh\\u432? r\\u7845?t kh\\'e1 r\\u7891?i.}\\line \\line {\\ltrch Xem t\\u7899?i \\u273?\\'e2y, Tr\\u7847?n K\\'ednh Huy\\u7873?n b\\u7855?t \\u273?\\u7847?u h\\u432?ng ph\\u7845?n tr\\u7903? l\\u7841?i, h\\u7855?n \\u273?i nh\\'ecn m\\u7897?t s\\u7889? th\\u7913? k\\u7923? l\\u7841? kh\\'e1c, t\\u7927? nh\\u432? robot, xe thi\\u7871?t gi\\'e1p, m\\'e1y bay h\\'e0ng kh\\'f4ng v\\'e0 v\\'f4 v\\'e0n c\\'e1i kh\\'e1c.}\\line \\line {\\ltrch Nh\\u432?ng r\\u7845?t nhanh h\\u7855?n \\u273?\\'e3 th\\u7845?t v\\u7885?ng, ngo\\u7841?i tr\\u7915? th\\u7913? g\\u7885?i l\\'e0 \"bom nhi\\u7879?t h\\u7841?ch\", th\\'ec m\\u7845?y th\\u7913? c\\'f2n l\\u7841?i kh\\'f4ng c\\'f3 g\\'ec \\u273?\\'e1ng xem.}\\line \\line {\\ltrch C\\'e0ng xem Tr\\u7847?n K\\'ednh Huy\\u7873?n c\\'e0ng l\\u7855?c \\u273?\\u7847?u, r\\u7889?t cu\\u7897?c bi\\u7871?t t\\u7841?i sao n\\u417?i \\u273?\\'e2y l\\u7841?i v\\u7855?ng nh\\u432? nh\\'e0 hoang.}\\line \\line {\\ltrch Nguy\\'ean lai \\u273?\\u7891? v\\u7853?t n\\u417?i \\u273?\\'e2y kh\\'f4ng c\\'f3 nhi\\u7873?u t\\'e1c d\\u7909?ng v\\u7899?i tu ti\\'ean gi\\u7843?, t\\u7927? nh\\u432? \"xe t\\u259?ng\", kh\\'f4ng b\\u7857?ng m\\u7901?i m\\u7897?t v\\u7883? tu s\\u297? H\\u432? Linh trung k\\u7923? c\\'f2n r\\u7867? h\\u417?n.}\\line \\line {\\ltrch H\\u417?n n\\u7919?a, tu s\\u297? H\\u432? Linh trung k\\u7923? c\\'f3 th\\u7875? phi h\\'e0nh, m\\'e0 chi\\u7871?c xe t\\u259?ng kia l\\u7841?i kh\\'f4ng th\\u7875? l\\'e0m nh\\u432? v\\u7853?y.}\\line \\line {\\ltrch V\\u7873? ph\\u7847?n c\\'e1i g\\u7885?i l\\'e0 \"ti\\'eam k\\'edch\", Tr\\u7847?n K\\'ednh Huy\\u7873?n c\\'e0ng kh\\'f4ng th\\'edch, chi b\\u7857?ng nh\\u7901? m\\u7897?t t\\'ean \\u273?\\u7879? t\\u7917? h\\u7841?ch t\\'e2m c\\'f2n th\\'edch h\\u7907?p h\\u417?n.}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n mi\\u7877?n c\\u432?\\u7905?ng l\\u432?\\u7907?n th\\'eam m\\u7897?t v\\'f2ng, xem th\\u7917? c\\'f2n th\\u7913? g\\'ec th\\'fa v\\u7883? hay kh\\'f4ng.}\\line \\line {\\ltrch Nh\\u432?ng c\\'e0ng nh\\'ecn c\\'e0ng ch\\'e1n, m\\u7863?c d\\'f9 h\\'ecnh d\\'e1ng c\\'f3 ch\\'fat m\\u7899?i l\\u7841?, nh\\u432?ng c\\'f4ng d\\u7909?ng kh\\'f4ng ph\\'f9 h\\u7907?p, h\\u7847?u nh\\u432? tu ti\\'ean gi\\u7899?i \\u273?\\u7873?u c\\'f3 m\\u7845?y c\\'e1i t\\u432?\\u417?ng t\\u7921?.}\\line \\line {\\ltrch \\u272?\\u7863?c bi\\u7879?t l\\'e0 robot, c\\'e1i n\\'e0y c\\'f2n k\\'e9m xa kh\\'f4i l\\u7895?i thu\\u7853?t c\\u7911?a tu ti\\'ean gi\\u7899?i, th\\u7913? \\u273?\\u7891? ch\\u417?i kia v\\u7853?y m\\'e0 c\\'f2n r\\u7845?t nhi\\u7873?u c\\'f4ng d\\u7909?ng.}\\line \\line {\\ltrch Xem ra mua v\\u7873? ch\\u7881? mang t\\'ednh s\\u432?u t\\u7847?m ch\\u7913? kh\\'f4ng h\\u7919?u d\\u7909?ng, b\\u7903?i v\\u7853?y h\\u7855?n s\\u7869? kh\\'f4ng b\\u7887? ra m\\u7897?t kh\\u7889?i linh th\\u7841?ch n\\'e0o.}\\line \\line {\\ltrch Ph\\u7909?ng Mi\\'ean th\\u7845?y v\\u7867? m\\u7863?t th\\u7845?t v\\u7885?ng c\\u7911?a h\\u7855?n th\\'ec l\\u7855?c \\u273?\\u7847?u, th\\u7903? d\\'e0i:}\\line \\line {\\ltrch \"Ngay t\\u7915? \\u273?\\u7847?u ta \\u273?\\'e3 n\\'f3i v\\u7899?i ng\\u432?\\u417?i r\\u7891?i, m\\u7845?y th\\u7913? n\\'e0y kh\\'f4ng thi\\u7871?t th\\u7921?c v\\u7899?i ng\\u432?\\u7901?i tu ti\\'ean ch\\'fang ta, b\\u7903?i v\\u7853?y t\\'f4ng m\\'f4n m\\u7899?i kh\\'f4ng nh\\'ecn t\\u7899?i.\"}\\line \\line {\\ltrch Tr\\u7847?n K\\'ednh Huy\\u7873?n kh\\'f4ng tr\\u7843? l\\u7901?i, \\u273?\\'fang l\\'e0 hy v\\u7885?ng c\\'e0ng nhi\\u7873?u, th\\u7845?t v\\u7885?ng c\\'e0ng l\\u7899?n, h\\u7871?t th\\u7843?y do h\\u7855?n \\u273?\\'e1nh gi\\'e1 m\\u7845?y m\\'f3n \\u273?\\u7891? kia qu\\'e1 cao.}\\line \\line {\\ltrch B\\u7845?t qu\\'e1, h\\u7855?n bi\\u7871?t trong Thi\\'ean Uy\\'ean Th\\'e0nh c\\'f2n r\\u7845?t nhi\\u7873?u th\\u7913? m\\u7899?i m\\u7867? \\u273?ang ch\\u7901? \\u273?\\u7907?i m\\'ecnh, cho n\\'ean t\\'e2m t\\'ecnh l\\u7853?p t\\u7913?c ph\\u7845?n ch\\u7845?n tr\\u7903? l\\u7841?i.}\\line \\line \\li0\\ri0\\sa0\\sb0\\fi0\\ql\\par}\r\n}\r\n}\r\n}"
